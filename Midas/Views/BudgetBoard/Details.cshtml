@using Midas_Models.BudgetBoard
@model BudgetBoardDetailDTO

@{
    ViewData["Title"] = "Details";
    var expenseTotal = ViewBag.expenseTotal;
    var amountLeft = Model.LivingAmount - expenseTotal;
}

<div>
    <h2>Board: @Model.BudgetBoardName</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("Living Amount")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LivingAmount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName("Total After Expenses")
        </dt>
        <dd class="col-sm-10">
            @string.Format("{0:C}", amountLeft)
        </dd>
    </dl>
</div>
<div class="card">
    <div class="card-header">
        <h3>Monthly Expenses Total: $@expenseTotal</h3>
    </div>
    <div class="card-body">
        @if (Model.MonthlyExpenses.Any())
        {<table class="table">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Name")
                        </th>
                        <th>
                            @Html.DisplayName("Amount")
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.MonthlyExpenses)
                    {
                        <tr>
                            <td>
                                @expense.BillName
                            </td>
                            <td>
                                @string.Format("{0:C}", expense.BillAmount)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = expense.MonthlyExpenseId }) |
                                @Html.ActionLink("Details", "Details", new { id = expense.MonthlyExpenseId }) |
                                @Html.ActionLink("Delete", "Delete", new { id = expense.MonthlyExpenseId })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5 class="card-title">No Expenses Have Been Added To This Board</h5>
        }
    </div>
    <div class="card-footer">
        <a asp-controller="#" asp-action="#" class="btn btn-primary" style="width:auto">Add Expense</a>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
