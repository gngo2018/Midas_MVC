@using Midas_Models.Admin
@model RoleClaimView
@{
    ViewData["Title"] = "ManageRoleClaims";
    var roleName = ViewBag.roleName;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            Manage Claims for Role: @roleName
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Claims.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                    <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                        @Model.Claims[i].ClaimType
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-controller="Admin" asp-action="Edit" asp-route-id="@Model.RoleId" class="btn btn-primary" style="width:auto">Cancel</a>
        </div>
    </div>

</form>